{
  "name": "ts2uml",
  "private": "true",
  "version": "0.0.1",
  "workspaces": [
    "packages/models",
    "packages/npm-lib",
    "packages/vscode-ext"
  ],
  "scripts": {
    "dev:models": "cd packages/models && bun index.ts",
    "build": "bun run build:all",
    "build:all": "bun run build:models && bun run build:npm && bun run build:vscode",
    "build:models": "cd packages/models && bun run build",
    "build:npm": "cd packages/npm-package && bun run build",
    "build:vscode": "cd packages/vscode-extension && bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "is-what": "^5.0.2"
  }
}